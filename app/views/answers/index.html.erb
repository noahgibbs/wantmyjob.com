<% big_center_text "Listing answers" %>

<%= button_to('Match All Profiles', :action => :match_all_profiles) %>

<table>
  <tr>
    <th>Job</th>
    <th>Answer type</th>
    <th>Question</th>
    <th>Data1</th>
    <th>Data2</th>
    <th>Data3</th>
    <th>Data4</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.job_id %></td>
    <td><%= answer.answer_type %></td>
    <td><%= answer.question_id %></td>
    <td><%= answer.data1 %></td>
    <td><%= answer.data2 %></td>
    <td><%= answer.data3 %></td>
    <td><%= answer.data4 %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_answer_path %>
