<% title "Get Started" %>
<div class="spaced_container">

  <h2>Tell Me the Basics</h2>

  <p>
    First let's register you for the site, and make sure you can get
    back in next time.
  </p>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <p><%= f.label :login, "Login (nickname)" %><br />
    <%= f.text_field :login %></p>

    <p><%= f.label :email %><br />
    <%= f.text_field :email %></p>

    <p><%= f.label :password %><br />
    <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></p>

    <p></p>

    <p class="very_inset"><%= f.submit "Then, What Jobs You've Had" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
